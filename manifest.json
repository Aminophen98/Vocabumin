{
  "manifest_version": 3,
  "name": "Vocaminary",
  "update_url": "https://cdn.vocaminary.com/extension/updates.xml",
  "version": "0.1.1",
  "description": "Transform YouTube learning with word-perfect subtitles that sync naturally with speech. Perfect for language learners.",
  "author": "Aminophen",
  "homepage_url": "https://vocaminary.com",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "nativeMessaging"
  ],

  "host_permissions": [
    "https://www.youtube.com/*",
    "https://app.vocaminary.com/*",
    "https://api.vocaminary.com/*",
    "http://localhost:5000/*",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": [
        "content/core/Logger.js",
        "content/core/EventBus.js",
        "content/core/StateManager.js",
        "content/core/NotificationService.js",
        "content/services/server-connection.js",
        "content/services/StorageService.js",
        "content/services/SubtitleManager.js",
        "content/youtube/DOMWatcher.js",
        "content/youtube/VideoObserver.js",
        "content/ui/OverlayUI.js",
        "content/services/CaptionService.js",
        "content/ui/WordTooltip.js",
        "content/ui/StatsOverlay.js",
        "content/services/APIService.js",
        "content/content-script.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://app.vocaminary.com/*",
        "http://localhost:3000/*"
      ],
      "js": ["js/auth-bridge.js"]
    }
  ],
  
  "action": {
    "default_title": "Vocaminary - Click to view stats"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}